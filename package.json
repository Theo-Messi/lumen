{
  "name": "lumen",
  "private": true,
  "homepage": "https://lumen.theojs.cn/",
  "repository": "Theo-Messi/lumen",
  "license": "MIT",
  "author": "Theo",
  "scripts": {
    "build": "pnpm -F=docs build",
    "change": "cd src && pnpm dlx changelogithub --dry",
    "commitlint": "commitlint --edit",
    "cz": "git-cz",
    "dev": "pnpm -F=docs dev",
    "format": "prettier --write .",
    "format:cheak": "prettier --check .",
    "iall": "pnpm -r install",
    "preview": "pnpm -F=docs preview",
    "release": "cd src && pnpm release",
    "upall": "pnpm -r update --latest"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-vinyl"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "commitizen": "^4.3.1",
    "cz-vinyl": "^2.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.0",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^2.5.15",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-vitepress": "^0.0.10",
    "simple-git-hooks": "^2.13.0"
  },
  "packageManager": "pnpm@10.12.3"
}
