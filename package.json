{
  "private": true,
  "name": "tools",
  "repository": "Theo-Messi/tools",
  "homepage": "https://tools.theojs.cn/",
  "funding": "https://github.com/Theo-Messi/tools?sponsor=1",
  "author": "Theo-Messi",
  "license": "MIT",
  "scripts": {
    "dev:docs": "pnpm -F=docs dev",
    "build:docs": "pnpm -F=docs build",
    "preview:docs": "pnpm -F=docs preview",
    "release:lumen": "pnpm -F=lumen release",
    "format": "prettier --write .",
    "format:cheak": "prettier --check .",
    "change:dly": "npx changelogithub --no-group --no-contributors --no-emoji --dry"
  },
  "devDependencies": {
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.11.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@9.12.3"
}
